{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock %}
{% block body %}
<br>
<br>
<br>
<table class="table table-dark"> 
 <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">LOGIN</th>
      <th scope="col">PASSWORD</th>
      <th scope="col">EMAIL</th>
      <th scope="col">ROL</th>
    </tr>
  </thead>
  <tbody>
{% for data in users %}
<tr>
    <td>{{ data.id }}</td>
    <td>{{ data.login }}</td>
    <td>{{ data.password }}</td>
    <td>{{ data.email }}</td>
    <td>{{ data.rol }}</td>
    <td><a href ="{{ path('usuarieditar', {'id': data.id}) }}">Editar usuari</a>
    <td><a href ="{{ path('usuarieliminar', {'id': data.id}) }}">Eliminar usuari</a>
</td>
</tr>

{% endfor %}
</tbody>
</table>
 {% if is_granted('ROLE_ADMIN') %}
    <a href ="{{path('usuarinou')}}">Nou usuari</a>
    {% endif %}
{% endblock %}
